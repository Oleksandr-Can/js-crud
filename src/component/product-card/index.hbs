<section>
  {{#with data.products}}
    {{#if isEmpty}}
      <mark> Empty</mark>
    {{else}}
      {{#each list}}
        <div class='form'>
          <h1 class='form__name'>{{name}}</h1>
          <h2 class='form__description'>{{description}}</h2>
          <div class='form__id'>ID: {{id}}</div>
          <div class='form__line'>
            <div>${{price}}</div>
            <div>
              <div class='form__link'>
                <a
                  href='/product-edit?id={{id}}'
                  class='form__button'
                >Edit</a>
              </div>
            </div>
          </div>

        </div>
      {{/each}}
    {{/if}}
  {{/with}}
</section>