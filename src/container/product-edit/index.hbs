{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class='main'>
  <section>
    <h1 class='title'>Edit Product</h1>
    <div class='form'>
      
      <h2 class='form__topic'>Product info</h2>
      {{#with data.products}}
      {{#if isEmpty}}
      <mark> Empty</mark>
    {{else}}
      <form method='POST' action='/product-edit'>
        <div class='form__content'>
          <div class="form__field__block">
            <div class='form__field'>
              <div>
                <label for='name' class='form__label'>Product
                  name:</label>
              </div>
              <div>
                  <input
                    type='text'
                    name='name'
                    class='form__input'
                    value="{{product.name}}"
                  />
              </div>
            </div>
          <div class='form__field'>
            <label
              for='price'
              class='form__label'
              
            >Price:</label>
            <input
              type='number'
              name='price'
              class='form__input'
              value="{{product.price}}"
            />
          </div>          

          <div class='form__field'>
              <div>
                <label for='name' class='form__label'>ID:</label>
              </div>
              <div>
                  <input
                    type='number'
                    name='id'
                    class='form__input'
                    value="{{product.id}}"
                  />
              </div>
            </div>
        </div>


          <div class='form__field'>
            <label
              for='description'
              class='form__label'
            >Description:</label>
            <input
              type='text'
              name='description'
              class='form__input'
              value="{{product.description}}"
            />
          <div class="form__field-button">
           
          <button class='form__button'>Save Update</button>
          </form>

          
           <form method='GET' action='/product-delete'>

           <div class='form__link'>
                <a
                  href='/product-delete?id={{product.id}}'
                  class='form__button-red'
                >Delete Product</a>
              </div>
          {{!-- <button onclick="document.location='/product-delete?id={{product.id}}'"class='form__button-red'>Delete Product</button> --}}
           </form>
         </div>
    
        {{/if}}
      {{/with}}
    </div>
  </section>

{{! </main>  }}
