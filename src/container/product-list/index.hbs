 }}

{{! <main class='main'> }}

<section class='container'>
  <h1 class='title'>Product List</h1>
  <div class='card'>
    {{#with data.products}}
      {{#if isEmpty}}
        <mark> Empty</mark>
      {{else}}
        
        {{> product-card}}
        
      {{/if}}
    {{/with}}
  </div>
</section>

{{! </main>  }}
